    script.
        //- 
        $(".filter__see-more").click(function () {
            if($(".filter__type__item__box").toggleClass("active")) {
                $(this).text("(Show more)");
            }else {
                $(this).text("(Show less)");
            }
        });
        
        //- 
        $('.filter__result__sortby').click(function(){
            $('.filter__left').toggleClass('active');
            $('body').toggleClass('no-scroll');
        });
        $('.filter__by svg').click(function(){
            $('.filter__left').removeClass('active');
            $('body').removeClass('no-scroll');

        });
